{
    "parser": "@typescript-eslint/parser",
    "env": {
        "es6": true
    },
    "rules": {
        "semi": "error",
        "max-len": [2, 120, 4]
    },
    "parserOptions":  {
        "ecmaVersion":  2018,
        "sourceType":  "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "extends": [
        "plugin:@typescript-eslint/recommended",
        "prettier/@typescript-eslint",
        "plugin:prettier/recommended"
    ]
}
